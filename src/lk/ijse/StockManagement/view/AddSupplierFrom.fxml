<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="635.0" prefWidth="460.0"
            style="-fx-background-color: #34393F;" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="lk.ijse.StockManagement.controller.Admin.AddSupplierFromController">
    <children>
        <ImageView fitHeight="741.0" fitWidth="460.0" opacity="0.17" pickOnBounds="true">
            <image>
                <Image url="@assets/image/BGImage/add%20Employee.png"/>
            </image>
        </ImageView>
        <ImageView fitHeight="3000" fitWidth="250.0" layoutX="200.0" layoutY="387.0" opacity="0.1" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@assets/image/icon/user.png"/>
            </image>
        </ImageView>
        <ImageView fitHeight="58.0" fitWidth="83.0" layoutX="206.0" layoutY="23.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@assets/image/icon/suppliers.png"/>
            </image>
        </ImageView>
        <JFXTextField fx:id="txtName" alignment="CENTER" layoutX="40.0" layoutY="130.0" prefHeight="25.0"
                      prefWidth="390.0" promptText="Name" styleClass="add-employee-text"
                      stylesheets="@style/EmployeeDashBord.css"/>
        <JFXTextField fx:id="txtAddress" alignment="CENTER" layoutX="40.0" layoutY="200.0" prefHeight="25.0"
                      prefWidth="390.0" promptText="Address" styleClass="add-employee-text"
                      stylesheets="@style/EmployeeDashBord.css"/>
        <JFXTextField fx:id="txtEmail" alignment="CENTER" layoutX="40.0" layoutY="270.0" prefHeight="25.0"
                      prefWidth="390.0" promptText="Email" styleClass="add-employee-text"
                      stylesheets="@style/EmployeeDashBord.css"/>
        <JFXTextField fx:id="txtPhone" alignment="CENTER" layoutX="40.0" layoutY="340.0" prefHeight="25.0"
                      prefWidth="390.0" promptText="Phone Number" onKeyReleased="#phoneCheck"
                      styleClass="add-employee-text" stylesheets="@style/EmployeeDashBord.css"/>
        <JFXButton fx:id="btnAdd" layoutX="69.0" layoutY="674.0" onAction="#addOnAction" prefHeight="37.0"
                   prefWidth="320.0" styleClass="add-employee-button" stylesheets="@style/EmployeeDashBord.css"
                   text="Add"/>

        <ImageView fitHeight="35.0" fitWidth="35.0" layoutX="426.0" layoutY="11.0" onMouseClicked="#close"
                   pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@assets/image/icon/icons8-close-window-64.png"/>
            </image>
        </ImageView>
    </children>
</AnchorPane>
